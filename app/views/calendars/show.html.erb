<h1>Meetings</h1>

<%= month_calendar do |date| %>
  <%= date.day %>

  <% stamp = @calendar.stamps.find_by(date: date.to_datetime) %>
  <% if stamp.present? && stamp.stamp_checked == true %>
    checked!
  <% end %>
<% end %>

